<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml - Parts Inventory App Configuration
    
    This manifest file defines the app's permissions, activities, and configuration.
    The app requires several permissions for its core functionality:
    - Camera access for capturing part images
    - Internet access for Firebase connectivity
    - Storage permissions for image handling
    - Audio permissions for speech recognition features
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for capturing part images -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Internet permission for Firebase Realtime Database and Storage -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Storage permissions for reading and writing captured images -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Audio permissions for speech recognition in remarks field -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- Camera hardware feature (optional - app can work without camera) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Application configuration -->
    <application
        android:name=".PartsInventoryApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shan_Inventory">
        
        <!-- FileProvider for secure file sharing with camera -->
        <!-- Allows the app to share image files with the camera intent -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Main activity - entry point of the application -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Shan_Inventory">
            <!-- Intent filter to make this the launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- About activity - displays app information -->
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="About App"
            android:theme="@style/Theme.Shan_Inventory" />
    </application>

</manifest>